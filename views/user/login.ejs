<!doctype html> 
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
		<link rel="icon" type="image/png" href="/user/images/logo-removebg-preview.png" sizes="32x32"/>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/user/fonts/font.css">

    <link rel="stylesheet" href="/user/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/user/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/user/css/login.css">

    <title>Login-woodQ</title>
  </head>
  <body>
  

  <div class="d-lg-flex half container-fluid">
    <div class="bg order-1 order-md-2 img-fluid" style="background-image: url('/user/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Login to <strong>WoodQ</strong></h3>
            <%if(locals.wrong){%>
              <div class="alert alert-danger" role="alert">
                <%=locals.wrong%>
              </div>
            <%}%>
            <p class="mb-4">WLCOME BACK .</p>
            <form action="/login" method="post">
              <div class="form-group first">
                <label for="username">Username</label>
                <input type="text" class="form-control" placeholder="your-email@gmail.com"  id="username" name="email" >
              </div>
              <div class="form-group last mb-3">
                <label for="password">Password</label>
                <input type="password"  class="form-control" placeholder=" Password" id="password" name="password" >
              </div>
              
              <div class="d-flex mb-5 align-items-center">
                <label class="control control--checkbox mb-0"><span class="caption">Remember me</span>
                  <input type="checkbox" checked="checked"/>
                  <div class="control__indicator"></div>
                </label>
                <span class="ml-auto"><a href="/userSign_up" class="forgot-pass">Sign-up</a></span> 
              </div>

              <input type="submit" value="Log In" class="btn btn-block btn-primary">
              <span class="ml-auto"><a href="/forgPass" class="forgot-pass">Forgot Password</a></span> 

            </form>
          </div>
        </div>
      </div>
    </div>

    
  </div>
    
    
<!-- 
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script> -->
    <script src="js/bootstrap.min.js"></script>
    <!-- <script src="js/main.js"></script> -->
  </body>
</html>